# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
insert_final_newline = false

[*.{yml,yaml,ini,cfg,json,toml,lock}]
indent_size = 2

[*.{scss,js}]
indent_size = 2

[*.golden]
insert_final_newline = false
